{
  "extends": ["react-app", "react-app/jest", "prettier"],
  "rules": {
    "key-spacing": "off",
    "quotes": ["error", "single", { "avoidEscape": true }],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 2
      }
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "comma-dangle": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "keyword-spacing": [
      "error",
      {
        "after": true
      }
    ],
    "react/jsx-curly-brace-presence": [
      2,
      {
        "props": "never",
        "children": "never"
      }
    ],
    "import/no-anonymous-default-export": "off",
    "react/display-name": "off"
  }
}